#!/bin/sh -eu
jq . < /dev/stdin > /tmp/input

AMI=$(jq -r .version.ami < /tmp/input)

export AWS_ACCESS_KEY_ID=$(jq -r .source.aws_access_key_id < /tmp/input)
export AWS_SECRET_ACCESS_KEY=$(jq -r .source.aws_secret_access_key < /tmp/input)
export AWS_DEFAULT_REGION=$(jq -r .source.region < /tmp/input)

jq '.source.filters | to_entries | map({"Name": .key, "Values": [(.value|select(type!="array") = [.])|.[]|tostring]})' < /tmp/input > /tmp/filters.json

aws ec2 describe-images \
  --filters file:///tmp/filters.json \
  --query 'sort_by(Images, &CreationDate)' \
  | jq -M '.[([.[] | .ImageId] | index("'$AMI'") // -2) + 1:] | [.[] | {ami: .ImageId}]' 2>&1
